- model_class = Country


.span9
  - cache @country do
    = render_breadcrumbs
    .well
      .navbar.navbar-heading
        .navbar-inner
          .container
            %span.brand= t '.title', :default => model_class.model_name.human + t('labels.details')
            = link_to raw('<i class="icon-edit-sign"></i> ' + t('.edit', :default => t("helpers.links.edit"))), edit_country_path, :class => 'btn btn-success btn-mini btn-plus pull-right'
      %p
        %strong= model_class.human_attribute_name(:name) + ':'
        %br
        = @country.name
      %p
        %strong= model_class.human_attribute_name(:iso_code) + ':'
        %br
        = @country.iso_code
      %p
        %strong= model_class.human_attribute_name(:status) + ':'
        %br
        = @country.status

      .form-actions
        = link_to t('.back', :default => t("helpers.links.back")), countries_path, :class => 'btn'
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_country_path(@country), :class => 'btn'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), country_path(@country), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
