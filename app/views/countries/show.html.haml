- model_class = Country
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @country.name
%p
  %strong= model_class.human_attribute_name(:iso_code) + ':'
  %br
  = @country.iso_code
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @country.status

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), countries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_country_path(@country), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), country_path(@country), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
