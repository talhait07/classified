- model_class = Country


.span9
  = render_breadcrumbs
  .well
    .navbar.navbar-heading
      .navbar-inner
        .container
          %span.brand= t '.title', :default => model_class.model_name.human.pluralize + t('labels.listing')
          = link_to raw('<i class="icon-plus-sign"></i> ' + t('.new', :default => t("helpers.links.new"))), new_country_path, :class => 'btn btn-success btn-mini btn-plus pull-right'
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:id)
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:iso_code)
          %th= model_class.human_attribute_name(:status)
          %th= model_class.human_attribute_name(:created_at)
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @countries.each do |country|
          %tr
            %td= link_to country.id, country_path(country)
            %td= country.name
            %td= country.iso_code
            %td= country.status
            %td=l country.created_at
            %td
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_country_path(country), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), country_path(country), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'


